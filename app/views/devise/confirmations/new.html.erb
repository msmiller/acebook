<h2 class="pagetitle">Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'max-w-md space-y-4' }, data: { 'turbo' => "false", 'turbo-frame' => '_top'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-input' %>
  </div>

  <div class="actions my-2">
    <%= f.submit "Resend confirmation instructions", class: 'btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
