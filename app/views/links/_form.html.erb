
<%= semantic_form_for @link do |f| %>
  <div class="row">
    <div class="large-12 columns">
      <%= f.input :title, :input_html => { class: "form-input" } %>
      <%= f.input :url, :required => true, :input_html => { class: "form-input", type: "url" } %>
      <%= f.input :description, :as => :text, :input_html => { :rows => 8, class: "form-textarea" }, :label => "DESCRIPTION <span style='text-transform:lowercase;margin-left:10px;'>(auto-links enabled)</span>".html_safe %>
    </div>
  </div>
  <%= f.actions do %>
      <%= f.action :submit, :button_html => { :class => "btn-primary" } %>
    <% end %>
<% end %>