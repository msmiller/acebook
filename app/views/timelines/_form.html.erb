<%= semantic_form_for @timeline do |f| %>
  <div class="row">
    <div class="large-3 columns">
      <%= f.input :month, as: :select, collection: Date::MONTHNAMES.each_with_index.collect{|m, i| [m, i]} %>
    </div>
    <div class="large-3 columns">
      <%= f.input :year, as: :select, collection: (1985..2015).to_a %>
    </div>
    <div class="large-3 columns">
      <%= f.input :game, as: :select, collection: Acebook::Games.keys %>
    </div>
    <div class="large-3 columns">
      <%= f.input :kind, as: :select, collection: Timeline::KINDS.keys %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <%= f.input :title %>
      <%= f.input :body, :input_html => { :rows => 8 } %>
    </div>
  </div>
  <%= f.actions do %>
      <%= f.action :submit, :button_html => { :class => "button tiny radius" } %>
    <% end %>
<% end %>